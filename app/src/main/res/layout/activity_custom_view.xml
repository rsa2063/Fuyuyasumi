<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.fuyuyasumi.CustomViewActivity">

    <com.example.fuyuyasumi.MyTopView
        android:id="@+id/topview"
        custom:leftText="@string/str1"
        custom:leftColor="@color/button_material_dark"
        custom:rightText="right button"
        custom:rightColor="@color/button_material_dark"
        custom:titleText="titleTest"
        custom:titleSize="10sp"
        custom:titleColor="@color/highlighted_text_material_dark"
        android:layout_width="match_parent"
        android:layout_height="40dp"></com.example.fuyuyasumi.MyTopView>
    <com.example.fuyuyasumi.MyCircleView
        android:id="@+id/view_1"
        android:layout_below="@id/topview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <com.example.fuyuyasumi.MyMusicView
        android:text="--hello, world--"
        android:textSize="20sp"
        android:layout_toRightOf="@id/view_1"
        android:layout_below="@id/topview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>
