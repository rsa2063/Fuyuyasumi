<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.fuyuyasumi.SmsgvaeesaaaasssssdddeeeeeActivity">

    <EditText
        android:id="@+id/send_num"
        android:layout_margin="10dp"
        android:text="18352864517"
        android:hint="phone number here"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/send_content"
        android:text="test1234"
        android:hint="content of the smsmessage"
        android:layout_margin="10dp"
        android:layout_below="@id/send_num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/send"
        android:text="send"
        android:layout_margin="10dp"
        android:layout_below="@id/send_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/call"
        android:text="call 98765431206"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="50dp"
        android:layout_below="@id/send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
